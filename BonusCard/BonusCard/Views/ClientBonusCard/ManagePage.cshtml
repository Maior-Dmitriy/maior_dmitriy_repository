@model IEnumerable<BonusCard.Models.ClientBonusCard>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Bonus card list</h2>
        </div>
    </div>

    <br /> <br/>

    @if (Model.Count() > 0 )
     {
        <table class="table table-bordered table-striped" style=" width: 100%">
            <thead>
                <tr>
                    <th>
                        CardId
                    </th>
                    <th>
                       Name
                    </th>
                    <th>
                        Surname
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        CardBalance
                    </th>
                    <th>
                        IsActivated
                    </th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
               {
                <tr>
                    <td width="25%">@item.ClientBonusCardID</td>
                    <td width="15%">@item.Client.Name</td>
                    <td width="10%">@item.Client.Surname</td>
                    <td width="10%">@item.Client.PhoneNumber</td>
                    <td width="5%">@item.Balanse</td>
                    <td width="5%">@item.IsActivated</td>
                    <td class="text-center" width="30%">
                        @if (item.IsActivated)
                        {
                            <div class="w-75  btn-group" role="group">
                                <a asp-controller="ClientBonusCard" asp-route-id="@item.ClientBonusCardID" asp-action="UpdateAddPage" class="btn btn-outline-primary">Add money</a>

                            </div>

                            <div class="w-75  btn-group" role="group">
                                <a asp-controller="ClientBonusCard" asp-route-id="@item.ClientBonusCardID" asp-action="UpdateGetPage" class="btn btn-outline-danger">Get Money</a>
                            </div>
                        }
                        else
                        {
                            <p class="btn btn-block">Non activate</p>
                        }
                    </td>
                </tr>
               }
            </tbody>
        </table> 
     }
    else
    {
       <h2>Bonus card isn`t exists</h2>
    }

</div>

