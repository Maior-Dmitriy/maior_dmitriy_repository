@model BonusCard.Models.ClientBonusCard

<form method="post" asp-action="SearchByCardNum">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" row>
            <h2 class="text-info pl-3">Search by card ID </h2>
        </div>
        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ClientBonusCardID"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ClientBonusCardID" class="form-control" />
                        <span asp-validation-for="ClientBonusCardID" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">                            
                          <input type="submit" class="btn btn-info w-100" value="Search"/>
                        </div>
                        <div class="col">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


<form method="post" asp-action="SearchByPhoneNumber">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" row>
            <h2 class="text-info pl-3">Search by phone </h2>
        </div>
        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Client.PhoneNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Client.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Client.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Search" />
                        </div>
                        <div class="col">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
