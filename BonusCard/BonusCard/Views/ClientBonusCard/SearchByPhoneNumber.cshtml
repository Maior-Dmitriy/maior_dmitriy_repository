@model List<string>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Bonus card </h2>
        </div>
    </div>

    <br /> <br />

    @if (Model.Count() > 0 && Model != null)
    {
        <table class="table table-bordered table-striped" style=" width: 100%">
            <thead>
                <tr>
                    <th>
                        Details
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="25%">@item</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>Bonus card isn`t exists</h2>
    }

</div>

