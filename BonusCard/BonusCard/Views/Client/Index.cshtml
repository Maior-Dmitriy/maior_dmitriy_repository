@model BonusCard.Models.ClientWithAdress

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" row>
            <h2 class="text-info pl-3">Add Card </h2>
        </div>
        
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Client.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Client.Name" class="form-control" />
                        <span asp-validation-for="Client.Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Client.Surname"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Client.Surname" class="form-control" />
                        <span asp-validation-for="Client.Surname" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Client.DateOfBirth"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Client.DateOfBirth" type="date" class="form-control" />
                        <span asp-validation-for="Client.DateOfBirth" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Client.PhoneNumber"></label> 
                    </div>
                    <div class="col-8">
                        <input asp-for="Client.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Client.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Adress.Region"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Adress.Region" class="form-control" />
                        <span asp-validation-for="Adress.Region" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Adress.CityOrVillage"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Adress.CityOrVillage" class="form-control" />
                        <span asp-validation-for="Adress.CityOrVillage" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Adress.Street"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Adress.Street" class="form-control" />
                        <span asp-validation-for="Adress.Street" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Adress.HouseNum"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Adress.HouseNum" class="form-control" />
                        <span asp-validation-for="Adress.HouseNum" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Adress.FlatNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Adress.FlatNumber" class="form-control" />
                        <span asp-validation-for="Adress.FlatNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

